<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/home31"
            android:layout_width="80dp"
            android:layout_height="80dp">
            <Button
                android:id="@+id/homeButton1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/home"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/homeButton1"
                android:textSize="23sp"
                android:text="首页"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/home32"
            android:layout_width="90dp"
            android:layout_marginLeft="60dp"
            android:layout_height="80dp">
            <Button
                android:id="@+id/homeButton2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="13dp"
                android:background="@mipmap/shopcar"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/homeButton2"
                android:layout_marginLeft="19dp"
                android:textSize="23sp"
                android:text="购物车"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/home33"
            android:layout_width="80dp"
            android:layout_marginLeft="60dp"
            android:layout_height="80dp">
            <Button
                android:id="@+id/homeButton3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/myself"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/homeButton3"
                android:textSize="23sp"
                android:text="我"/>
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
