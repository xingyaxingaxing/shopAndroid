<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent">
    <ImageView
        android:layout_marginLeft="30dp"
        android:layout_gravity="center"
        android:id="@+id/img"
        android:layout_width="80dp"
        android:layout_height="100dp" />
    <RelativeLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/name1"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"/>
        <ImageView
            android:id="@id/img"
            android:layout_below="@+id/name1"
            android:layout_marginTop="12dp"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@mipmap/money1"/>
        <TextView
            android:id="@+id/name2"
            android:layout_below="@id/name1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#d81e06"/>
        <Button
            android:id="@+id/reduceButton"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/goodListViewText"
            android:layout_marginRight="20dp"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@mipmap/reduice"/>
        <TextView
            android:id="@+id/goodListViewText"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/add"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:text="0"
            android:layout_height="wrap_content"
            android:textSize="22sp"/>
        <Button
            android:id="@+id/add"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@mipmap/addpong"/>
    </RelativeLayout>


</LinearLayout>
