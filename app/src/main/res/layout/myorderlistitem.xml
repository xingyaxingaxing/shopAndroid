<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <ImageView
        android:layout_marginLeft="30dp"
        android:layout_gravity="center"
        android:id="@+id/myOrderListItemImage"
        android:layout_width="80dp"
        android:layout_height="100dp" />
    <RelativeLayout
        android:id="@+id/myOrderListItemRL1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/myOrderListItemText1"
            android:textSize="15sp"
            android:text="下单时间:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/myOrderListItemText1"
            android:id="@+id/myOrderListItemText2"
            android:textSize="15sp"
            android:text="下单时间"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/myOrderListItemText3"
            android:layout_below="@+id/myOrderListItemText1"
            android:text="总价:"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/myOrderListItemText4"
            android:layout_below="@+id/myOrderListItemText1"
            android:layout_toRightOf="@+id/myOrderListItemText3"
            android:text="总价:"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/myOrderListItemText5"
            android:layout_below="@+id/myOrderListItemText4"
            android:text="完结:"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/myOrderListItemButton"
            android:layout_below="@+id/myOrderListItemText5"
            android:text="待支付"
            android:textSize="15sp"
            android:layout_marginRight="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/myOrderListItemButton1"
            android:text="查看详情"
            android:textSize="20dp"
            android:textColor="#ff00f0"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>
