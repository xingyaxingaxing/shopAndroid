<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_above="@+id/orderLayout1"
        android:id="@+id/orderLayout0"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/yourName"
            android:text="联系人:"
            android:layout_marginRight="3dp"
            android:textSize="20sp"
            android:textColor="#000000"
            android:id="@+id/orderText0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/yourName"
            android:text=""
            android:hint="你 的 名 字"
            android:layout_marginLeft="40dp"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/orderLayout1"
        android:layout_above="@+id/orderLayout2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/phone"
            android:text="联系电话:"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/phone"
            android:text=""
            android:hint="你的手机号"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/orderLayout2"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/aDress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:text="送货地址:"
            android:textSize="20sp"
            android:textColor="#000000"/>
        <EditText
            android:id="@+id/aDress"
            android:text=""
            android:hint="送 货 地 址"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/orderLayout3"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <RelativeLayout
            android:layout_weight="3"
            android:layout_width="wrap_content"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/orderText1"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待支付:"
                android:textSize="25sp"/>
            <ImageView
                android:id="@+id/orderImg"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/orderText1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/money1"/>
            <TextView
                android:id="@+id/TobePaid"
                android:layout_toRightOf="@+id/orderImg"
                android:layout_centerVertical="true"
                android:hint="0.00"
                android:layout_marginLeft="10dp"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="80dp"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/textViewPaid"
                android:textSize="25sp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#f0f0"
                android:text="支付"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="80dp"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/CanClePaid"
                android:textSize="25sp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ff00"
                android:text="取消"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
