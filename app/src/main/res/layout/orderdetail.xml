<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/orderDetailRL1"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:text="订单详情"
            android:textSize="28dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:layout_below="@+id/orderDetailRL1"
        android:layout_above="@+id/orderDetailRL2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ListView
            android:id="@+id/orderDetailListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </ListView>
    </LinearLayout>
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/orderDetailRL2"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/orderDetailImageView1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/money1"/>
        <TextView
            android:layout_toRightOf="@+id/orderDetailImageView1"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/countMoney"
            android:hint="0.00"
            android:text=""
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/orderDetailButton"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:text="再来一单"
            android:layout_width="100dp"
            android:layout_height="match_parent" />
    </RelativeLayout>

</RelativeLayout>
